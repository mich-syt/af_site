extends ./templates/layout.pug 

block content 
    div.main
        div.container-fluid
            div.col-sm-10.col-sm-offset-1
                br
                br
                div#desc
                    h4 #{description}
                br 
                div#details
                    if timing!="TBC" 
                        h4#timing-and-venue: b #{timing} at #{venue}
                    else 
                        h4#coming-soon: b More details coming soon! 
                    if timing2 
                        h4#timing2-and-venue2: b #{timing2} at #{venue2}
                    if fee 
                        h4#fee: b Workshop fee: $#{fee}
                    if size
                        h4#size: b Limited slots available to first #{size} participants
                br 
                br
                br
                div: a#backbutton(href="/#workshops") < Back to Main Menu
            