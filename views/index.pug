extends ./templates/layout.pug

block splash
    include ./templates/splashblur.pug
block content
    // GET SHIT DONE
    div.main#about
        div.container
            div.intro-header.text-left
                img.logoimg(src="img/green.png" alt="AF16")
                hr
                h1 (IM)POSSIBILITIES
                h2 We dare you to be passionate.
                p This year's Arts Fest is about embracing the raw and honest imperfections, the ugly brain babies of questionable experimentation, the unrefined gibberish from which ideas are born. It's about the boldness to explore within and beyond and to celebrate our differences.
                    div.space
        
        // All your masonry posts
        div.gallery-container
            div.row.no-gutters
                div.col-lg-12.col-md-12.col-xs-12
                    a.thumbnails(href="/calendar" style="width:100%;"): img.img-responsive(src="/img/mainpage/Menu_OfficialSchedule.jpg" alt="" style="width:100%;")
                div.col-lg-4.col-md-4.col-xs-12
                    a.thumbnails(href="/#workshops"): div.hovereffect   
                        img.img-responsive(src="img/mainpage/Menu_Workshops.jpg" alt="") 
                        div.overlay
                            h2 WORKSHOPS
                div.col-lg-4.col-md-4.col-xs-12
                    a.thumbnails(href="/#performances"): div.hovereffect
                        img.img-responsive(src="/img/mainpage/Menu_Performance.jpg" alt="")
                        div.overlay
                            h2 PERFORMANCES
                    
                div.col-lg-4.col-md-4.col-xs-12
                    a.thumbnails(href="/#exhibition"): div.hovereffect
                        img.img-responsive(src="/img/mainpage/Menu_Exhibition.jpg" alt="")
                        div.overlay
                            h2 EXHIBITION 
                div.col-lg-4.col-md-4.col-xs-12
                    a.thumbnails(href="/cinema"): div.hovereffect
                        img.img-responsive(src="/img/mainpage/Menu_FilmScreening.jpg" alt="")
                        div.overlay 
                            h2 FILM SCREENING AND DISCUSSION
                div.col-lg-4.col-md-4.col-xs-12
                    a.thumbnails(href="/arts_market"): div.hovereffect
                        img.img-responsive(src="/img/mainpage/Menu_ArtsMarket.jpg" alt="")
                        div.overlay
                            h2 ARTS MARKET 
                div.col-lg-4.col-md-4.col-xs-12
                    a.thumbnails(href="https://www.facebook.com/SUTDArtsFest/shop/"): div.hovereffect
                        img.img-responsive(src="/img/mainpage/Menu_Pillar+.jpg" alt="")
                        div.overlay
                            h2 PILLAR+ 

    div.full-img-divide
        img.over(src="img/whitefull2.png" alt="")

    div.posts-main
