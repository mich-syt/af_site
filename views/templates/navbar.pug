                    form.navbar-form.navbar-left.navbar-search-form(role="search")
                        div.form-group
                            input(type="text" value="" class="form-control" placeholder="Search...")

                    ul.nav.navbar-nav.navbar-right
                        li:  a(href="#") Another Link
                        li: button.btn.btn-round.btn-default(href="#") A Round Button



    div.blurred-container
        div.img-src(style=`background-image: url(${splash.base})`)
        if splash.cover
            div.img-src.blur(style=`background-image: url(${splash.cover})` ) <!-- image blur on scroll, custom.js -->
        div.cover.black(data-color="black")

        