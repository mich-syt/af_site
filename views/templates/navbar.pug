// Navbar + Splash
div#navbar-full
    div#navbar
        nav.navbar.navbar-ct-black.navbar-transparent.navbar-fixed-top(role="navigation")
            div.container-fluid
                div.navbar-header
                    button.navbar-toggle(type="button"  data-toggle="collapse" data-target="#bs-example-navbar-collapse-1")
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href="/") AF16

                // Collect the nav links, forms, and other content for toggling
                div.collapse.navbar-collapse#bs-example-navbar-collapse-1
                    ul.nav.navbar-nav
                        li.active: a(href="#") Link
                        li.dropdown
                            a.dropdown-toggle(href="#" data-toggle="dropdown" role="button") Dropdown 
                                span.caret
                            ul.dropdown-menu
                                li: a(href="#") #{hello} Action
                                li: a(href="#") #{splash.base} Another action
                                li: a(href="#") Something
                                li: a(href="#") Another action
                                li: a(href="#") Something
                                li.divider(role="separator")
                                li: a(href="#") Separated link
